<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_320sdp"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/textbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.276"
        android:textColor="@color/white"
        android:textSize="25dp"
        ></EditText>

    <EditText
        android:id="@+id/que"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.199"
        android:textSize="23dp"
        ></EditText>

    <LinearLayout
        android:layout_width="@dimen/_320sdp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="@dimen/_320sdp"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="8dp"
                android:backgroundTint="@color/grey"
                android:text="AC"
                android:textSize="22dp"
                android:textColor="@color/white"
                android:id="@+id/allcl"></Button>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="8dp"
                android:backgroundTint="@color/grey"
                android:text="C"
                android:textSize="22dp"
                android:textColor="@color/white"
                android:id="@+id/cl"></Button>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="8dp"
                android:backgroundTint="@color/teal_200"
                android:text="%"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:id="@+id/mod"></Button>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="8dp"
                android:backgroundTint="@color/teal_200"
                android:text="รท"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:id="@+id/div"></Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_320sdp"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="8dp"
                android:backgroundTint="@color/black"
                android:text="7"
                android:textSize="22dp"
                android:textColor="@color/white"
                android:id="@+id/seven"></Button>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="8dp"
                android:backgroundTint="@color/black"
                android:text="8"
                android:textSize="22dp"
                android:textColor="@color/white"
                android:id="@+id/eight"></Button>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="8dp"
                android:backgroundTint="@color/black"
                android:text="9"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:id="@+id/nine"></Button>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="8dp"
                android:backgroundTint="@color/teal_200"
                android:text="x"
                android:textAllCaps="false"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:id="@+id/mul"></Button>

        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/_320sdp"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="8dp"
                android:backgroundTint="@color/black"
                android:text="4"
                android:textSize="22dp"
                android:textColor="@color/white"
                android:id="@+id/four"></Button>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="8dp"
                android:backgroundTint="@color/black"
                android:text="5"
                android:textSize="22dp"
                android:textColor="@color/white"
                android:id="@+id/five"></Button>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="8dp"
                android:backgroundTint="@color/black"
                android:text="6"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:id="@+id/six"></Button>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="8dp"
                android:backgroundTint="@color/teal_200"
                android:text="-"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:id="@+id/sub"></Button>

        </LinearLayout>
        <LinearLayout
        android:layout_width="@dimen/_320sdp"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="8dp"
            android:backgroundTint="@color/black"
            android:text="1"
            android:textSize="22dp"
            android:textColor="@color/white"
            android:id="@+id/one"></Button>

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="8dp"
            android:backgroundTint="@color/black"
            android:text="2"
            android:textSize="22dp"
            android:textColor="@color/white"
            android:id="@+id/two"></Button>

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="8dp"
            android:backgroundTint="@color/black"
            android:text="3"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:id="@+id/three"></Button>

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="8dp"
            android:backgroundTint="@color/teal_200"
            android:text="+"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:id="@+id/add"></Button>

    </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/_320sdp"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:layout_width="170dp"
                android:layout_height="80dp"
                android:layout_marginLeft="8dp"
                android:backgroundTint="@color/black"
                android:text="0"
                android:textSize="22dp"
                android:textColor="@color/white"
                android:id="@+id/zero"></Button>


            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="8dp"
                android:backgroundTint="@color/black"
                android:text="."
                android:textSize="25dp"
                android:textColor="@color/white"
                android:id="@+id/dec"></Button>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="8dp"
                android:backgroundTint="@color/blue"
                android:text="="
                android:textSize="25dp"
                android:textColor="@color/white"
                android:id="@+id/eq"></Button>

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>